{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "/*", "close": "*/", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*(:)\\s*$",
    "decreaseIndentPattern": "^\\s*(end|otherwise|else|when)\\b.*$"
  },
  "folding": {
    "markers": {
      "start": "^.*:\\s*$",
      "end": "^\\s*(end)\\s+(if|check|try|action|count|for|repeat|while|until|loop)\\b"
    }
  },
  "wordPattern": "(-?\\d+(\\.\\d+)?)|([A-Za-z][A-Za-z0-9_]*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
