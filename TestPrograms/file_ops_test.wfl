// Test new file operations
display "Testing file operations..."

// Create a directory
create directory at "./test_dir"
display "Created directory: ./test_dir"

// Create a file
create file at "./test_dir/test.txt" with "Hello WFL!"
display "Created file: ./test_dir/test.txt"

// Create another file  
create file at "./test_dir/data.txt" with "Some data here"
display "Created file: ./test_dir/data.txt"

// Delete a file
delete file at "./test_dir/data.txt"
display "Deleted file: ./test_dir/data.txt"

// Delete the directory
delete directory at "./test_dir"
display "Deleted directory: ./test_dir"

display "File operations test completed!"