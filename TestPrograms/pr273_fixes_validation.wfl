describe "Test isolation prevents pollution":

    setup:
        store shared as 100
    end setup

    test "reads setup variable":
        expect shared to equal 100
    end test

    test "creates independent local variable":
        store local as 200
        expect local to equal 200
    end test

    test "previous test's local variable not visible":
        // This should work because each test is isolated
        store local as 300
        expect local to equal 300
    end test

end describe
