// Test file for create list syntax and list operations

// Test 1: Create a list with initial values
create list shopping:
    add "milk"
    add "bread"
    add "eggs"
end list

display "Created shopping list with initial items"

// Display the items
for each item in shopping:
    display "  - " with item
end for

display ""

// Test 2: Add items to the list
add "butter" to shopping
add "cheese" to shopping

display "After adding butter and cheese:"
for each item in shopping:
    display "  - " with item
end for

display ""

// Test 3: Remove an item
remove "eggs" from shopping

display "After removing eggs:"
for each item in shopping:
    display "  - " with item
end for

display ""

