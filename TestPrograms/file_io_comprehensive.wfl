delete file at "test.dat"
display "✓ Deleted test.dat"

delete file at "ops_test.txt"
display "✓ Deleted ops_test.txt"

delete file at "async1.txt"
display "✓ Deleted async1.txt"

delete file at "async2.txt"
display "✓ Deleted async2.txt"

delete file at "stream_test.txt"
display "✓ Deleted stream_test.txt"

display "✓ All test files cleaned up successfully"
display ""

