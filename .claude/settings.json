{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"$json = [Console]::In.ReadToEnd() | ConvertFrom-Json; $path = $json.tool_input.file_path; if ($path -like '*.rs') { cargo fmt --all }\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
