// Test the skip loop logic

store count2 as 0
store total_odds as 0

display "Starting loop test..."

repeat while count2 is less than 5:
    change count2 to count2 plus 1
    display "count2 = " with count2

    // Skip even numbers
    check if ((count2 divided by 2) times 2) is equal to count2:
        display "  -> Skipping (even number)"
        skip    // (continue to next iteration)
    end check

    display "  -> Adding to total_odds"
    change total_odds to total_odds plus count2
end repeat

display "Final total_odds = " with total_odds
display "Expected: 1+3+5 = 9, but loop only goes to 4, so actual should be 1+3 = 4"
